{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/react/*"],
      "@components/*": ["resources/js/react/components/*"],
      "@pages/*": ["resources/js/react/pages/*"],
      "@services/*": ["resources/js/react/services/*"],
      "@hooks/*": ["resources/js/react/hooks/*"],
      "@config/*": ["resources/js/react/config/*"],
      "@utils/*": ["resources/js/react/utils/*"]
    }
  },
  "include": [
    "resources/js/react/**/*"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public",
    "storage"
  ]
}