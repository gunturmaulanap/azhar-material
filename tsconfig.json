{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/react/*"],
      "@components/*": ["resources/js/react/components/*"],
      "@pages/*": ["resources/js/react/pages/*"],
      "@services/*": ["resources/js/react/services/*"],
      "@hooks/*": ["resources/js/react/hooks/*"],
      "@config/*": ["resources/js/react/config/*"],
      "@utils/*": ["resources/js/react/utils/*"]
    }
  },
  "include": ["resources/js/react/**/*"],
  "exclude": ["node_modules", "vendor", "public", "storage"]
}
